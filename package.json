{
  "name": "video-automation",
  "version": "1.0.0",
  "description": "Automated video editing system with cloud storage",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "preview": "remotion studio src/remotion/index.ts --port 3001",
    "start": "node dist/server.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "pipeline:full": "tsx scripts/runFullPipeline.ts",
    "pipeline:auto-edit": "tsx scripts/runAutoEdit.ts",
    "pipeline:transcribe": "tsx scripts/runTranscription.ts",
    "pipeline:highlights": "tsx scripts/runHighlightDetection.ts",
    "pipeline:editing-plan": "tsx scripts/runEditingPlan.ts",
    "pipeline:render": "tsx scripts/runRendering.ts",
    "pipeline:resume": "tsx scripts/resumePipeline.ts"
  },
  "keywords": [
    "video",
    "automation",
    "cloud-storage",
    "wasabi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.937.0",
    "@aws-sdk/s3-request-presigner": "^3.937.0",
    "@google/generative-ai": "^0.24.1",
    "@remotion/bundler": "^4.0.376",
    "@remotion/cli": "^4.0.376",
    "@remotion/renderer": "^4.0.376",
    "@types/express": "^5.0.5",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "animate.css": "^4.1.1",
    "axios": "^1.13.2",
    "bullmq": "^5.64.1",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^166.0.0",
    "multer": "^2.0.2",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^6.9.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "remotion": "^4.0.376",
    "remotion-transition-series": "^0.0.10",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.12",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "fast-check": "^3.15.0",
    "glob": "^13.0.0",
    "supertest": "^7.1.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  }
}
