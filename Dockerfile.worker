FROM node:18

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    ffmpeg \
    imagemagick \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages
RUN pip3 install auto-editor openai-whisper

# Copy package files
COPY package*.json ./

# Install Node dependencies
RUN npm ci --production

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Start worker
CMD ["node", "dist/worker.js"]
